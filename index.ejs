<body>
    <header>
        <nav>
            <div class="logo">
            <h1>M o o d  B e a t s</h1>
            </div>
            <ul class="dd">
                <li>
                    <button class="hom">Home</button>
                    <div class="dd-con">
                        <a href="http://127.0.0.1:5500/index.html">Recently Played</a>
                        <a href="#">Recommended</a>
                        <a href="#">Trending</a>
                    </div>
                <li>
                    <button class="hom">Explore</button>
                    <div class="dd-con">
                        <a href="#">About Moodbeats</a>
                        <a href="#">About Us</a>
                        <a href="#">Contact info</a>
                    </div>
                <li><button class="hom">Playlists</button></li>
                <li><button id="signInBtn" class="sign-in-btn">Sign In</button>

                    <!-- Login Popup Modal -->
                    <div id="login-popup" class="modal" style="display: none;">
                        <div class="modal-content">
                            <span id="close-login-btn" class="close">&times;</span>
                            <h2>Login to MoodBeats</h2>
                            <form id="loginForm">
                                <label for="username">Username:</label>
                                <input type="text" id="username" name="username" required>
                                <label for="password">Password:</label>
                                <input type="password" id="password" name="password" required>
                                <button type="submit" class="login-btn">Login</button>
                            </form>
                        </div>
                    </div>     </nav>
    </header>

    <main>
        <section class="hero">
            <div class="overlay"></div>
            <img height=600px src="https://i.imgur.com/g0wHZhP.png" alt="MoodBeats Logo">
            <h2>Let the music match your mood</h2>
            <p>Discover playlists curated to fit your emotions, powered by Sonify, our AI chatbot.</p>
            <button id="open-chatbot-btn">Chat with Sonify</button> <br>
        </section>

        <!-- Login Modal -->
        <div id="login-popup" class="modal" style="display: none;">
            <div class="modal-content">
                <span id="close-login-btn" class="close">&times;</span>
                <h2>Login to MoodBeats</h2>
                <form>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                    <button type="submit">Login</button>
                </form>
            </div>
        </div>

        <!-- Chatbot Modal -->
        <div id="chatbot-popup" class="modal" style="display: none;">
            <div class="modal-content">
                <span id="close-chatbot-btn" class="close">&times;</span>
                <div id="phone-frame">
                    <div id="chat-header">
